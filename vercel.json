{
  "version": 2,
  "routes": [
    {
      "src": "/en",
      "dest": "/index.html",
      "headers": {
        "Content-Language": "en",
        "X-Robots-Tag": "index, follow"
      }
    },
    {
      "src": "/ru",
      "dest": "/index.html",
      "headers": {
        "Content-Language": "ru",
        "X-Robots-Tag": "index, follow"
      }
    },
    {
      "src": "/zh",
      "dest": "/index.html",
      "headers": {
        "Content-Language": "zh-CN",
        "X-Robots-Tag": "index, follow"
      }
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
} 